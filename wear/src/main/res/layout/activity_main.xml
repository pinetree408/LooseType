<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context="com.example.leesangyoon.wear.MainActivity" tools:deviceIds="wear">

    <LinearLayout
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="4">
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="6">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/user1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="1"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/user2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/user3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="3"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/user4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="4"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="5"
            android:orientation="vertical">
            <TextView
                android:id="@+id/user5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="5"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/user6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="6"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/user7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="7"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/user8"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="8"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/user0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="0"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:weightSum="6"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/user9"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/user10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/user11"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="11"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:id="@+id/user12"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="12"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_weight="1"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
        </LinearLayout>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"/>
    </LinearLayout>

    <TextView
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="40dp"
        android:text="START TASK"
        android:textAlignment="center"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/start"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="40dp"
        android:textAlignment="center"
        android:gravity="center"
        />

    <TextView
        android:id="@+id/end"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="40dp"
        android:textAlignment="center"
        android:gravity="center"
        android:text="END"
        />

    <!-- Task Layout -->
    <LinearLayout
        android:id="@+id/task"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>

        <LinearLayout
            android:id="@+id/anything"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/target"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13dp"
                android:textColor="#ff4433"
                android:gravity="center_vertical"
                android:textAlignment="center" />
            <View
                android:layout_width="match_parent"
                android:layout_height="13dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/suggest"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:weightSum="3">
            <TextView
                android:id="@+id/suggest1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10dp"
                android:layout_weight="1"
                android:background="#aaaaaa"
                android:gravity="right|center_vertical"
                android:textAlignment="gravity" />
            <TextView
                android:id="@+id/suggest2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10dp"
                android:background="#cccccc"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"/>
            <TextView
                android:id="@+id/suggest3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="10dp"
                android:layout_weight="1"
                android:background="#aaaaaa"
                android:gravity="left|center_vertical"
                android:textAlignment="gravity" />

        </LinearLayout>

        <com.example.leesangyoon.wear.KeyboardView
            android:id="@+id/keyboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</android.support.wearable.view.BoxInsetLayout>
